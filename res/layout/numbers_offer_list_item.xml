<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/darkgrey"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <FrameLayout
            android:id="@+id/clock_frame"
            android:background="@color/green"
            android:layout_width="56dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/time_icon"
                android:src="@drawable/clock_white"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@drawable/shadow_right"
                android:scaleType="fitXY"
                android:layout_width="6dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@drawable/shadow_left"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_width="6dp"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <TextView
            android:id="@+id/offer_value"
            android:text="awd"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/purplelight"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/quality_good_frame"
                android:background="@color/darkgrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--<ImageView-->
                <!--android:src="@drawable/correct_white"-->
                <!--android:scaleType="center"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"/>-->
                <ImageView
                    android:src="@drawable/shadow_right"
                    android:scaleType="fitXY"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/shadow_left"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/quality_bad_frame"
                android:background="@color/darkgrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/quality"
                    android:src="@drawable/quality_white"
                    android:background="@color/red"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/shadow_down"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <ImageView
                    android:src="@drawable/shadow_up"
                    android:scaleType="fitXY"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>
                <ImageView
                    android:src="@drawable/shadow_right"
                    android:scaleType="fitXY"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/shadow_left"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:background="@color/darkgrey"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/offer_bulls"
                    android:text="2"
                    style="@style/NumbersElementBullsCowsText"/>
                <ImageView
                    android:id="@+id/bull_image"
                    android:src="@drawable/bull_white"
                    style="@style/NumbersElementBullsCowsImage"/>
            </FrameLayout>
            <FrameLayout
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/offer_cows"
                    android:text="2"
                    style="@style/NumbersElementBullsCowsText"/>
                <ImageView
                    android:id="@+id/cow_image"
                    android:src="@drawable/cow_black"
                    style="@style/NumbersElementBullsCowsImage"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<View-->
        <!--android:background="@color/purplelight"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"/>-->

</LinearLayout>