<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/darkgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="24dp">

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="@string/numbers_dialog_label"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            app:cardBackgroundColor="@color/purplelight"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:gravity="center_horizontal"
                                android:id="@+id/offer_value"
                                android:padding="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </android.support.v7.widget.CardView>
                        <ImageButton
                            android:id="@+id/refresh"
                            android:src="@drawable/refresh"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:theme="@style/Theme.AppCompat.Light"
                            style="@style/Widget.AppCompat.Button.Borderless"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/number_element_container_123"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/number_element_1"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="1"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/number_element_2"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/number_element_3"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="3"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/number_element_container_456"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/number_element_4"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="4"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/number_element_5"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="5"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/number_element_6"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="6"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/number_element_container_789"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/number_element_7"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="7"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/number_element_8"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="8"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/number_element_9"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="9"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0px"/>
                            <Button
                                android:id="@+id/number_element_0"
                                android:theme="@style/NumbersElementButton"
                                android:textColor="@color/black"
                                android:text="0"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0px"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="52dp">
                <Button
                    android:id="@+id/add_offer"
                    android:textColor="@color/purple"
                    android:text="ok"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:theme="@style/Theme.AppCompat.Light"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>