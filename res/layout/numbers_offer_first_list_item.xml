<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="12dp"/>-->
    <LinearLayout
        android:background="@color/purpleverylight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0px"/>
        <TextView
            android:id="@+id/offer_value"
            android:text="awd"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.CardView
            android:layout_margin="6dp"
            app:cardPreventCornerOverlap="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:background="@color/darkgrey"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/offer_bulls"
                        android:text="2"
                        style="@style/NumbersElementBullsCowsText"/>
                    <ImageView
                        android:id="@+id/bull_image"
                        android:src="@drawable/bull_white"
                        style="@style/NumbersElementBullsCowsImage"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/offer_cows"
                        android:text="2"
                        style="@style/NumbersElementBullsCowsText"/>
                    <ImageView
                        android:id="@+id/cow_image"
                        android:src="@drawable/cow"
                        style="@style/NumbersElementBullsCowsImage"/>
                </FrameLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>