<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/game_tracking"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/offers_list_timer_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:background="@color/white"
            android:gravity="end"
            android:paddingRight="112dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/offers_list_timer"
                android:layout_marginRight="4dp"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:text="asdasd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="@string/seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/attempts_left_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:background="@color/white"
            android:gravity="end"
            android:paddingRight="112dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="@string/attempts_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/attempts_left_number"
                android:textSize="20dp"
                android:textColor="@color/green"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/purple"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>